<%= form_for :session, url: session_path do |form| %>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', placeholder: "Email" %>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">security</i>
          <%= form.label :password %>
          <%= form.password_field :password, placeholder: "Password" %>
        </div>
        <%= form.submit class: 'btn'%><br>
        <div class="input-field col s6">
          <% if Clearance.configuration.allow_sign_up? %>
            <br><%= link_to t(".sign_up"), sign_up_path, class: 'btn' %><br>
          <% end %>
          <br><%= link_to t(".forgot_password"), new_password_path, class: 'btn' %>
        </div>
        <div class="facebook-sign-in">
          <br><%= link_to "Sign up with Facebook", "https://www.facebook.com/v2.10/dialog/oauth?client_id=#{Rails.application.secrets.facebook_app_id}&redirect_uri=#{ auth_facebook_callback_url }", class: "btn" %>
        </div>
      </div>
    </form>
  </div>
<% end %>

<h1>MEME</h1>
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <%= image_tag src=@meme.image %>
        </div>
        <div class="card-content">
          <p><%= @meme.title %></p>
        </div>
        <div class="card-action">
          <% if signed_in? && current_user.id ==   @meme.user_id %>
          <%= link_to "Edit Meme", edit_meme_path %>
          <%= button_to "Delete Meme", "/memes/#{@meme.id}", method: "delete", action: "destroy", data: {confirm: "Are you rure you want to delete this awesome meme?"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

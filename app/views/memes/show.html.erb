<h1>MEME</h1>
<p><%= @meme.title %></p>
<div><%= image_tag src=@meme.image %></div>
<% if signed_in? && current_user.id ==   @meme.user_id %>
<div><%= link_to "Edit Meme", edit_meme_path %></div>
<div><%= button_to "Delete Meme", "/memes/#{@meme.id}", method: "delete", action: "destroy", data: {confirm: "Are you rure you want to delete this awesome meme?"} %>
<% end %>

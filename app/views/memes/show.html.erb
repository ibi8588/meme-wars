<h1>MEME</h1>
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <%= image_tag src=@meme.image %>
        </div>
        <div class="card-content">
          <p><%= @meme.title %></p>
        </div>
        <div class="card-action">
          Posted by  <%= link_to( @meme.user.username, user_path(@meme.user)) %>
        </div>
        <% if current_user %>
          <% if current_user.favorite_memes.exists?(@meme.id) %>
            <div class="card-action">
              <%= link_to( "Remove from Favorites", favorite_memes_path(meme_id: @meme.id), method: :delete) %>
            </div>
            <% else %>
            <div class="card-action">
              <%= link_to( "Add to Favorites", favorite_memes_path(meme_id: @meme.id), method: :post) %>
            </div>
            <% end %>
        <% end %>
        <div class="card-action">
          <% if signed_in? && current_user.id ==  @meme.user_id %>
          <%= button_to "Edit Meme", edit_meme_path, method: "get", action: "edit", class: "btn" %><br>
          <%= button_to "Delete Meme", "/memes/#{@meme.id}", method: "delete", action: "destroy", class: "btn",  data: {confirm: "Are you sure you want to delete this awesome meme?"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

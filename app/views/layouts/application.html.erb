<!DOCTYPE html>
<html>
<head>
  <title>MemeWars</title>
  <%= csrf_meta_tags %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div id="header">
    <% if signed_in? -%>
    <%= link_to "Profile", user_path(current_user)%>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
      <p><%= current_user.username %></p>
    <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end -%>
  </div>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>
      <nav>
        <div class="nav-wrapper blue lighten-4">
          <%= link_to "Home" , root_path, class: "brand-logo" %>
         <ul id="nav-mobile" class="right hide-on-med-and-down">
           <li> <%= link_to "Home" , root_path %> </li>
           <li> <%= link_to "Memes", memes_path %> </li>
           <li> <%= link_to "Post", new_meme_path %> </li>
         </ul>
         </div>
       </nav>

  <%= yield %>
</body>
</html>

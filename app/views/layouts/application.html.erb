<!DOCTYPE html>
<html>
  <head>
    <title>MemeWars</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div id="header">
      <nav>
        <div class="nav-wrapper blue lighten-4">
          <a href="#" data-activates="mobile-demo" class="button-collapse">
            <i class="material-icons">menu</i>
          </a>
          <%= link_to image_tag('meme_logo.png'), root_path, class: "brand-logo" %>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li>
              <%= link_to "Memes", memes_path %>
            </li>
            <li>
              <%= link_to "Post", new_meme_path %>
            </li>
            <% if signed_in? -%>
            <li><%= link_to current_user.username, user_path(current_user)%></li>
            <li><%= button_to t(".sign_out"), sign_out_path, method: :delete, class: "waves-effect waves-light btn-flat"%></li>
          <% else -%>
            <li><%= link_to t(".sign_in"), sign_in_path %></li>
            <li><%= link_to t(".sign_up"), sign_up_path %></li>
            <% end -%>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <li>
              <%= link_to "Memes", memes_path %>
            </li>
            <li>
              <%= link_to "Post", new_meme_path %>
            </li>
            <% if signed_in? -%>
            <li><%= link_to current_user.username, user_path(current_user)%></li>
            <li><%= button_to t(".sign_out"), sign_out_path, method: :delete, class: "waves-effect waves-light btn-flat"%></li>
          <% else -%>
            <li><%= link_to t(".sign_in"), sign_in_path %></li>
            <li><%= link_to t(".sign_up"), sign_up_path %></li>
            <% end -%>
          </ul>
        </div>
      </nav>
    </div>
    <header></header>

    <div id="flash">
      <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>

    <%= yield %>
    <footer class="page-footer blue lighten-4">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h4 class="white-text">MemeWars</h4>
            <p class="grey-text text-lighten-4">A site for sharing memes with your friends.</p>
          </div>
          <div class="col l4 offset-l2 s12">
            <h4 class="white-text">Links</h4>
            <ul id="nav-mobile">
              <li>
                <a href="https://github.com/ibi8588">GitHub</a>
              </li>
              <li>
                <a href="https://www.linkedin.com/in/ibrahim-aldridge-6b0b932b/">LinkedIn</a>
              </li>
              <li>
                <a href="https://www.facebook.com/ibrahim.aldridge">Facebook</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container"></div>
      </div>
    </footer>
  </body>
</html>
